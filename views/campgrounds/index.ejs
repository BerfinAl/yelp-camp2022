<% layout("./layouts/boilerplate") %>
<div class="row">
 <div id="cluster-map">
    </div>
</div>
<%- include("../partials/flash") %>

    <div class="container mt-3">
        <h1 class="text-center my-2">All Campgrounds</h1>
        <% for (let campground of campgrounds) { %>
            <div class="card mb-3">
                <div class="row align-items-center">
                    <div class="col-md-4 ">
                        <% if(campground.images.length) {%>
                            <img src="<%= campground.images[0].url %> " alt="" class="rounded img-fluid">
                            <% } else {%>
                                <img src="https://images.unsplash.com/photo-1564577160324-112d603f750f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8Y2FtcHNpdGV8ZW58MHx8MHx8&auto=format&fit=crop&w=900&q=60"
                                    alt="" class=" img-thumbnail">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= campground.location %>
                            </h6>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">See Details</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>


    <script>
        const mapboxToken = "<%-process.env.MAPBOX_TOKEN %>"
        const campgrounds = { features: <%-JSON.stringify(campgrounds) %>}
    </script>

    <script src="/js/clustermap.js"></script>